#!/usr/bin/env python3
"""
npl-persona - Comprehensive persona management tool for NPL
Multi-tiered hierarchical loading: project → user → system

This is the v2 entry point that uses the modular npl_persona package.
The original monolithic script is preserved as npl-persona for backwards
compatibility during the migration period.
"""

import sys
from pathlib import Path

# Add lib directory to path for the npl_persona package
lib_dir = Path(__file__).resolve().parent.parent / "lib"
sys.path.insert(0, str(lib_dir))

from npl_persona import main

if __name__ == "__main__":
    sys.exit(main())
