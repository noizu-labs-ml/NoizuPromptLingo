{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__npl-mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/core/hooks/check-task-queue.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/core/hooks/check-task-queue.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
